<controls:PageBase 
    x:Class="PatientControl.Views.DatosPage"
    x:Name="pageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PatientControl.Controls"
    xmlns:local="using:PatientControl.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    prism:ViewModelLocator.AutoWireViewModel="True"
    xmlns:prism="using:Microsoft.Practices.Prism.Mvvm"
    xmlns:designtime="using:PatientControl.DesignTime"
    xmlns:datavis="using:WinRTXamlToolkit.Controls.DataVisualization"    
    xmlns:charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting" 
    xmlns:Series="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    mc:Ignorable="d">

    <d:Page.DataContext>
        <designtime:DatosPageViewModel />
    </d:Page.DataContext>

    <Page.Resources>

        <SolidColorBrush x:Key="BlockBackgroundBrush" Color="#FF46BDB8"/>
        <SolidColorBrush x:Key="StackPanelBackgroundBrush" Color="#FFDDDDDD"/>

        <Style x:Key="TextBlockHeader" TargetType="TextBlock">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5,0,2,0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="BorderHeader" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BlockBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TextBlockCell" TargetType="TextBlock">
            <Setter Property="Height" Value="15"/>
            <Setter Property="Margin" Value="5,0,2,0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style x:Key="BorderCell" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BlockBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <DataTemplate x:Key="DefaultItemDetailTemplate">
            <Grid HorizontalAlignment="Left">
                <Border Background="{StaticResource BlockBackgroundBrush}"/>
                <StackPanel Orientation="Horizontal" Background="{StaticResource StackPanelBackgroundBrush}" Width="806" HorizontalAlignment="Left">
                    <Border Style="{StaticResource BorderCell}">
                        <TextBlock Text="{Binding Articulacion}" Style="{StaticResource TextBlockCell}" Width="340"/>
                    </Border>
                    <Border Style="{StaticResource BorderCell}">
                        <TextBlock Text="{Binding Angulo}" Style="{StaticResource TextBlockCell}" Width="108"/>
                    </Border>
                    <Border Style="{StaticResource BorderCell}">
                        <TextBlock Text="{Binding Repeticiones}" Style="{StaticResource TextBlockCell}" Width="125"/>
                    </Border>
                    <Border Style="{StaticResource BorderCell}">
                        <TextBlock Text="{Binding FechaRealizado}" Style="{StaticResource TextBlockCell}" Width="256"/>
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.Row="0" Margin="0,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton"
                          Command="{Binding GoBackCommand, ElementName=pageRoot}"
                          Style="{StaticResource BackButtonStyle}" />
            <TextBlock x:Name="pageTitle" Text="{Binding Title}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" Margin="0,0,872,16" Height="72" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="nombrePaciente" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Paciente.Nombre}" VerticalAlignment="Center" Grid.Column="1" Margin="369,59,0,40" Height="41" Width="115" FontSize="26.667" TextAlignment="Justify" LineHeight="8" FontWeight="Bold"/>
        </Grid>

        <Grid Margin="10,0,10,10" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="22"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Grid.ColumnSpan="1" Orientation="Vertical" Margin="0,0,530,0">
                <StackPanel x:Name="Cabeceras" Margin="0" Orientation="Horizontal" HorizontalAlignment="Left" Width="806">
                    <Border Style="{StaticResource BorderHeader}">
                        <TextBlock x:Name="pruebaTitle" HorizontalAlignment="Center" Style="{StaticResource TextBlockHeader}" TextWrapping="Wrap" Text="PRUEBA" FontSize="18.667" Width="340" TextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource BorderHeader}">
                        <TextBlock x:Name="angTitle" HorizontalAlignment="Center" Style="{StaticResource TextBlockHeader}" TextWrapping="Wrap" Text="ANGULO" VerticalAlignment="Top" FontSize="18.667" Width="108" Margin="0" TextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource BorderHeader}">
                        <TextBlock x:Name="reptTitle" HorizontalAlignment="Center" Style="{StaticResource TextBlockHeader}" TextWrapping="Wrap" Text="REPETICIONES" VerticalAlignment="Top" FontSize="18.667" Width="125" Margin="0" TextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource BorderHeader}">
                        <TextBlock x:Name="repFecha" HorizontalAlignment="Center" Style="{StaticResource TextBlockHeader}" TextWrapping="Wrap" Text="FECHA REALIZADO" VerticalAlignment="Top" FontSize="18.667" Width="256" Margin="0" TextAlignment="Center"/>
                    </Border>
                </StackPanel>
                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding Ejercicios}"
                              ItemTemplate="{StaticResource DefaultItemDetailTemplate}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.ColumnSpan="2" Grid.Row="1">
            <charting:Chart 
                x:Name="PieChart" 
                Title="Pie Chart" 
                Margin="70,0,352,0">
                <charting:Chart.Series>
                    <Series:ColumnSeries 
                        Title="Population" 
                        ItemsSource="{Binding Ejercicios}" 
                        IndependentValueBinding="{Binding Tipo}" 
                        DependentValueBinding="{Binding Angulo}" 
                        IsSelectionEnabled="True" />
                </charting:Chart.Series>
            </charting:Chart>
        </Grid>
    </Grid>
</controls:PageBase>

